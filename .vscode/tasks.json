{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "swift: Build Debug Mole (app)",
      "type": "shell",
      "command": "swift",
      "args": ["build", "-c", "debug"],
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$swiftc"]
    },
    {
      "label": "swift: Build Release Mole (app)",
      "type": "shell",
      "command": "swift",
      "args": ["build", "-c", "release"],
      "options": {
        "cwd": "${workspaceFolder}/app"
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$swiftc"]
    }
  ]
}
